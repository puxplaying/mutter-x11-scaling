+          if (!meta_monitor_is_laptop_panel (monitor))
+            continue;
+        }
+      else if (match_rule & MONITOR_MATCH_EXTERNAL)
+        {
+          if (meta_monitor_is_laptop_panel (monitor))
+            continue;
+        }
